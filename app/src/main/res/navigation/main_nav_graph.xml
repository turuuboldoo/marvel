<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav_graph.xml"
    app:startDestination="@id/movieFragment">

    <fragment
        android:id="@+id/movieFragment"
        android:name="mn.turbo.marvel.presenter.movie.MovieListFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_movie_list">

        <action
            android:id="@+id/action_movieFragment_to_tvShowFragment"
            app:destination="@id/tvShowFragment" />

        <action
            android:id="@+id/action_movieFragment_to_movieDetailFragment"
            app:destination="@id/movieDetailFragment" />

    </fragment>

    <fragment
        android:id="@+id/tvShowFragment"
        android:name="mn.turbo.marvel.presenter.tvshow.TvShowListFragment"
        android:label="fragment_listen"
        tools:layout="@layout/fragment_tv_show">

        <action
            android:id="@+id/action_tvShowFragment_to_movieFragment"
            app:destination="@id/movieFragment" />

        <action
            android:id="@+id/action_tvShowFragment_to_tvShowDetailFragment"
            app:destination="@id/tvShowDetailFragment" />

    </fragment>

    <fragment
        android:id="@+id/tvShowDetailFragment"
        android:name="mn.turbo.marvel.presenter.tvshow.TvShowDetailFragment"
        android:label="TvShowDetailFragment">

        <argument
            android:name="tvShowId"
            android:defaultValue="0"
            app:argType="integer" />

    </fragment>

    <fragment
        android:id="@+id/movieDetailFragment"
        android:name="mn.turbo.marvel.presenter.movie.MovieDetailFragment"
        android:label="MovieDetailFragment">

        <argument
            android:name="movieId"
            android:defaultValue="0"
            app:argType="integer" />

        <action
            android:id="@+id/action_movieDetailFragment_to_videoPlayerFragment"
            app:destination="@id/videoPlayerFragment" />

    </fragment>

    <fragment
        android:id="@+id/videoPlayerFragment"
        android:name="mn.turbo.marvel.presenter.video.VideoPlayerFragment"
        android:label="VideoPlayerFragment">

        <argument
            android:name="videoUrl"
            app:nullable="true"
            app:argType="string" />

    </fragment>

</navigation>