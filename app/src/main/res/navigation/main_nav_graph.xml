<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav_graph.xml"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="mn.turbo.marvel.presenter.movie.MovieListFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_movie_list">

        <action
            android:id="@+id/action_homeFragment_to_listenFragment"
            app:destination="@id/listenFragment" />

    </fragment>

    <fragment
        android:id="@+id/listenFragment"
        android:name="mn.turbo.marvel.presenter.tv_show.TvShowListFragment"
        android:label="fragment_listen"
        tools:layout="@layout/fragment_tv_show">

        <action
            android:id="@+id/action_listenFragment_to_homeFragment"
            app:destination="@id/homeFragment" />

    </fragment>

</navigation>